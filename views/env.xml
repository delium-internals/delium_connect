<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_set_env_form" model="ir.ui.view">
    <field name="name">delium.subscription.form</field>
    <field name="model">delium.subscription</field>
    <field name="arch" type="xml">
      <form string="Subscription Details">
        <p><b><i>
          This controls which environment the subscription is done to. Do not touch unless you know what you are doing.
        </i></b></p>
        <sheet name="Onboarding Details">
          <group>
            <div class="o_stat_text">Environment to subscribe to.</div>
            <field name="env"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_set_env" model="ir.actions.act_window">
    <field name="name">Subscribe to Delium</field>
    <field name="res_model">delium.subscription</field>
    <field name="view_mode">form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Set the environment for Delium's The Miner.
      </p>
    </field>
  </record>
</odoo>